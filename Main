# main.py
from book_manager import BookManager

def main():
    book_manager = BookManager()
    
    # 列出所有书籍
    books = book_manager.get_all_books()
    print("Books in Library:")
    for book in books:
        print(f"- {book['title']} by {book['author']}")

if __name__ == "__main__":
    main()
