git checkout -b hotfix/fix-book-issue

# book_manager.py

class BookManager:
    def __init__(self):
        self.books = []

    def get_all_books(self):
        return self.books

    def add_book(self, title, author):
        if not title or not author:
            raise ValueError("Title and author must be provided.")
        self.books.append({"title": title, "author": author})

git add book_manager.py
git commit -m "Fix issue with adding books - ensure title and author are provided"
